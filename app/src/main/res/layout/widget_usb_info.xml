<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/widget_ll_usb_info_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <include layout="@layout/widget_action_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/DSPInfoTextStyle"
            android:text="ProductId:"/>
        <TextView
            android:id="@+id/widget_usb_info_tv_product_id"
            style="@style/DSPInfoTextStyle"
            android:text="null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/DSPInfoTextStyle"
            android:text="ProductName:"/>
        <TextView
            android:id="@+id/widget_usb_info_tv_product_name"
            style="@style/DSPInfoTextStyle"
            android:text="null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/DSPInfoTextStyle"
            android:text="VendorId:"/>
        <TextView
            android:id="@+id/widget_usb_info_tv_vendor_id"
            style="@style/DSPInfoTextStyle"
            android:text="null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/DSPInfoTextStyle"
            android:text="VendorName:"/>
        <TextView
            android:id="@+id/widget_usb_info_tv_vendor_name"
            style="@style/DSPInfoTextStyle"
            android:text="null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/DSPInfoTextStyle"
            android:text="DeviceId:"/>
        <TextView
            android:id="@+id/widget_usb_info_tv_device_id"
            style="@style/DSPInfoTextStyle"
            android:text="null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/DSPInfoTextStyle"
            android:text="DeviceName:"/>
        <TextView
            android:id="@+id/widget_usb_info_tv_device_name"
            style="@style/DSPInfoTextStyle"
            android:text="null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/DSPInfoTextStyle"
            android:text="SerialNumber:"/>
        <TextView
            android:id="@+id/widget_usb_info_tv_serial_num"
            style="@style/DSPInfoTextStyle"
            android:text="null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/DSPInfoTextStyle"
            android:text="VersionName:"/>
        <TextView
            android:id="@+id/widget_usb_info_tv_version_info"
            style="@style/DSPInfoTextStyle"
            android:text="null"/>
    </LinearLayout>





</LinearLayout>