<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="3"
    android:layout_column="2">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/main_btn_total_memo"
            android:width="0dp"
            android:layout_weight="1"
            android:text="累计申请内存"
            />
        <TextView
            android:id="@+id/main_tv_total_memo"
            android:width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_small"
            android:text="null"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/main_btn_free_memo"
            android:width="0dp"
            android:layout_weight="1"
            android:text="当前剩余内存"
            />
        <TextView
            android:id="@+id/main_tv_free_memo"
            android:width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_small"
            android:text="null"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/main_btn_max_memo"
            android:width="0dp"
            android:layout_weight="1"
            android:text="内存批复上限"
            />
        <TextView
            android:id="@+id/main_tv_max_memo"
            android:width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_small"
            android:text="null"
            />
    </TableRow>
</TableLayout>